<!DOCTYPE html>
<html>
<head>
  <title>LicensePlates</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <meta charset="utf-8">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.js"></script>
</head>
<body>
  <header class="main">License Plate Collection</header>

  <h1 class="header">License Plates (<%= Plate.count %>) </h1>
  <h1 class="header">Locations (<%= Location.count %>) </h1>

  <!-- These need to be links -->
  <div> <%= link_to "Locations", locations_path %> </div>
  <div> <%= link_to "Plates", plates_path %> </div>



  <%= yield %>

</body>
</html>
