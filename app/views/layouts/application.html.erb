<!DOCTYPE html>
<html>
<head>
  <title>LicensePlates</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <meta charset="utf-8">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.js"></script>
</head>

<body>

  <div class="container fixed">
    <div class="jumbotron" id="banner">
      <h3 class="stats col-md-4">Locations (<%= Location.count %>) </h3>
      <h3 class="title col-md-4">License Plate Collection</h2>
      <h3 class="stats col-md-4">License Plates (<%= Plate.count %>) </h3>
    </div>
  </div>

  <div class="container">
    <!-- These need to be links -->
    <div class="col-md-1 text-center route-index-1"><a href="https://github.com/arsm800/license_plates" class="btn btn-primary">See the Code</a></div>
    <div class="col-md-1 text-center route-index-2"> <%= link_to "Locations", locations_path, class: "btn btn-primary" %> </div>
    <div class="col-md-1 text-center route-index-3"> <%= link_to "Plates", plates_path, class: "btn btn-primary" %> </div>
  </div>

  <%= yield %>

</body>
</html>
