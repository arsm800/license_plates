<div class="container">
  <table class="table table-hover data" id="plates">
    <thead>
      <tr>
        <th>Number</th>
        <th>Year</th>
        <th>Description</th>
        <th>Source</th>
        <th>Date Acquired</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% @plates.each do |plate| %>
      <tr>
        <td> <%= plate.number %> </td>
        <td> <%= plate.year %> </td>
        <td> <%= plate.description %> </td>
        <td> <%= plate.source %> </td>
        <td> <%= plate.date_acquired %> </td>
        <td> <%= image_tag(plate.image_url, size: "100x60") %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
