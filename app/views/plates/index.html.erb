<h1>Plates!<h1>

<div> <%= link_to "Add", new_plate_path %> </div>

<table class="table table-hover">
  <% @plates.each do |plate| %>
    <tr>
      <td> <%= link_to "Update", edit_plate_path(plate) %> </td>
      <td> <%= plate.number %> </td>
      <td> <%= plate.year %> </td>
      <td> <%= plate.style %> </td>
      <td> <%= plate.source %> </td>
      <td> <%= plate.date_acquired %> </td>
    </tr>
  <% end %>

</table>
