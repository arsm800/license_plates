<h1 class="header"> <%= @location.territory %> (<%= @location.plates.count %>) </h1>

<div> <%= link_to "Add", new_location_plate_path(@location) %> </div>


<table class="table table-hover">
  <th>Update Plate</th>
  <th>Number</th>
  <th>Year</th>
  <th>Description</th>
  <th>Source</th>
  <th>Date Acquired</th>
  <th>Image </th>
  <% @plates.each do |plate| %>
    <tr>
      <td> <%= link_to "Update", edit_location_plate_path(@location, plate) %> </td>
      <td> <%= plate.number %> </td>
      <td> <%= plate.year %> </td>
      <td> <%= plate.style %> </td>
      <td> <%= plate.source %> </td>
      <td> <%= plate.date_acquired %> </td>
      <td> <%= image_tag "http://imgur.com/P9NO8Y4.png" %> </td>
    </tr>
  <% end %>

</table>
